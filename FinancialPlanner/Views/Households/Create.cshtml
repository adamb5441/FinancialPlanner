{
    @Html.AntiForgeryToken()

    <div class="form-horizontal well" style="margin: 10px 20% 0px">
        <h2 style="text-align: center">Household</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div style="padding: 10px 50px 0px">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
