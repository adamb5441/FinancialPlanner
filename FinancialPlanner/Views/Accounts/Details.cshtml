@model FinancialPlanner.Models.Account

@{
    ViewBag.Title = "Details";
}


<div style="display: flex; justify-content: center">
    <div style="width: 60vw" class="well row">
        <h1 style="text-align: center">@Model.Name</h1>
        <h4 style="text-align: center">Balance: @Model.CurrentBalance Alert: @Model.LowBalanceLevel</h4>

        <hr />
        <div style="margin: 60px">
            <table class="dtable table table-bordered table-striped mb-none" id="datatable-editable">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Enter By</th>
                        <th>Date</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr class="gradeX">
                            <td>@transaction.Type</td>
                            <td>@transaction.Amount</td>
                            <td>@transaction.enteredBy.DisplayName</td>
                            <td>@transaction.date</td>
                        </tr>

                    }
                </tbody>

            </table>
        </div>
    </div>

</div>

