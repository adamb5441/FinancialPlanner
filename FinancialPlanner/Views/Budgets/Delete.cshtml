@model FinancialPlanner.Models.Budget

@{
    ViewBag.Title = "Delete";
}

<h3 style="text-align: center">Are you sure you want to delete this?</h3>
<div style="display: flex; justify-content: center">
    <div style="width: 60vw" class="well row">
        <h4 style="text-align: center">@Model.Name</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TargetTotal)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TargetTotal)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CurrentTotal)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CurrentTotal)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color ">
                <input type="submit" value="Delete" class="btn btn-default" /> 
            </div>
        }
    </div>
</div>